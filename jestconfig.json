{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "collectCoverageFrom": ["!**/node_modules/**", "!lib/**", "!lib/**/**", "!**/asset/**", "src/*test.ts"],
  "testRegex": "(/src\\/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
  "watchPathIgnorePatterns": ["<rootDir>"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
